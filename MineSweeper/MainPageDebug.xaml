<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:MineSweeper.Views.Controls"
             x:Class="MineSweeper.MainPageDebug"
             Title="Debug Page"
             BackgroundColor="LightBlue">

    <!-- Simplified layout for debugging -->
  <Grid
        BackgroundColor="{AppThemeBinding Light={StaticResource GameBackground}, Dark={StaticResource GameBackgroundDark}}"
        Padding="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

          <VerticalStackLayout x:Name="gameGrid">
              <HorizontalStackLayout>
                  <ImageButton Source="Resources/Images/default/unplayed.png"></ImageButton>
              </HorizontalStackLayout>
          </VerticalStackLayout>

       
    </Grid>
</ContentPage>
