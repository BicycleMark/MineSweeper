<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:MineSweeper.Views.Controls"
             x:Class="MineSweeper.MainPageDebug"
             Title="Debug Page"
             BackgroundColor="LightBlue">

    <!-- Simplified layout for debugging -->
  <Grid
        BackgroundColor="{AppThemeBinding Light={StaticResource GameBackground}, Dark={StaticResource GameBackgroundDark}}"
        Padding="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Loading Overlay - Semi-transparent to allow interaction during progressive loading -->
        <Grid IsVisible="{Binding IsLoading, Converter={StaticResource BoolConverter}}"
              BackgroundColor="{AppThemeBinding Light=#80FFFFFF, Dark=#80000000}"
              ZIndex="999"
              Grid.RowSpan="4">
            <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center" Spacing="16">
                <ActivityIndicator IsRunning="{Binding IsLoading}"
                                   Color="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource Primary}}"
                                   HeightRequest="50"
                                   WidthRequest="50" />
                <Label Text="Loading game..."
                       FontSize="18"
                       TextColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource Primary}}"
                       HorizontalOptions="Center" />
            </VerticalStackLayout>
        </Grid>

        <!-- Progressive Loading Indicator -->
        <Grid IsVisible="{Binding IsGridFullyLoaded, Converter={StaticResource InverseBoolConverter}}"
              BackgroundColor="Transparent"
              ZIndex="998"
              IsEnabled="False"
              InputTransparent="True"
              Grid.RowSpan="4">
            <VerticalStackLayout HorizontalOptions="Center"
                                 VerticalOptions="End"
                                 Spacing="8"
                                 Margin="0,0,0,20">
                <ProgressBar Progress="{Binding LoadingProgress, Converter={StaticResource ProgressConverter}}"
                             ProgressColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource Primary}}"
                             HeightRequest="10"
                             WidthRequest="200" />
                <Label Text="{Binding LoadingProgress, StringFormat='{0}% Complete'}"
                       FontSize="14"
                       TextColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource Primary}}"
                       HorizontalOptions="Center" />
            </VerticalStackLayout>
        </Grid>

        <!-- Game Title -->
        <Label Grid.Row="0" Text="MineSweeper"
               FontSize="28" FontAttributes="Bold"
               HorizontalOptions="Center"
               TextColor="{AppThemeBinding Light={StaticResource MidnightBlue}, Dark=White}"
               Margin="0,0,0,16" />

        <!-- Game Info Panel -->
        <Grid Grid.Row="1" Margin="0,0,0,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Mines Counter -->
            <Border Grid.Column="0" Style="{StaticResource GameInfoPanelStyle}" Margin="0,0,8,0">
                <HorizontalStackLayout HorizontalOptions="Center" Spacing="8">
                    <Label Text="💣" FontSize="20" VerticalOptions="Center" />
                    <Label Text="{Binding RemainingMines}"
                           FontSize="20"
                           FontAttributes="Bold"
                           VerticalOptions="Center"
                           TextColor="{AppThemeBinding Light={StaticResource Secondary}, Dark={StaticResource Secondary}}" />
                </HorizontalStackLayout>
            </Border>

            <!-- Game Status -->
            <Border Grid.Column="1" Style="{StaticResource GameInfoPanelStyle}" Margin="4,0,4,0">
                <Label Text="{Binding GameStatus}"
                       FontSize="16"
                       FontAttributes="Bold"
                       HorizontalOptions="Center"
                       Style="{StaticResource GameLabelStyle}" />
            </Border>

            <!-- Timer -->
            <Border Grid.Column="2" Style="{StaticResource GameInfoPanelStyle}" Margin="8,0,0,0">
                <HorizontalStackLayout HorizontalOptions="Center" Spacing="8">
                    <Label Text="⏱️" FontSize="20" VerticalOptions="Center" />
                    <Label Text="{Binding GameTime}"
                           FontSize="20"
                           FontAttributes="Bold"
                           VerticalOptions="Center"
                           TextColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource Primary}}" />
                </HorizontalStackLayout>
            </Border>
        </Grid>

        <!-- Game Grid -->
        <Border Grid.Row="2"
                StrokeShape="RoundRectangle 12"
                Stroke="{AppThemeBinding Light={StaticResource CellBorder}, Dark={StaticResource CellBorderDark}}"
                StrokeThickness="2"
                BackgroundColor="{AppThemeBinding Light={StaticResource CellBorder}, Dark={StaticResource MidnightBlue}}"
                Padding="4"
                Margin="0,0,0,16"
                HorizontalOptions="Fill"
                VerticalOptions="Fill"
                Shadow="{Shadow Brush={AppThemeBinding Light={StaticResource Black}, Dark={StaticResource Black}}, Offset='0,4', Radius='8', Opacity='0.2'}">
            
          <VerticalStackLayout x:Name="gameGrid">
              <HorizontalStackLayout>
                  <ImageButton Source=""></ImageButton>
              </HorizontalStackLayout>
             
          </VerticalStackLayout>

        </Border>

        <!-- Instructions -->
        <VerticalStackLayout Grid.Row="3" Margin="0,16,0,0" Spacing="4"
                             IsVisible="{Binding IsGridFullyLoaded, Converter={StaticResource BoolConverter}}">
            <Label Text="Tap to reveal a cell"
                   HorizontalOptions="Center"
                   Style="{StaticResource GameLabelStyle}" />
            <Label Text="Double-tap to flag a mine"
                   HorizontalOptions="Center"
                   Style="{StaticResource GameLabelStyle}" />
        </VerticalStackLayout>
    </Grid>
</ContentPage>
