<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:MineSweeper.Views.Controls"
             xmlns:viewmodels="clr-namespace:MineSweeper.ViewModels"
             xmlns:models="clr-namespace:MineSweeper.Models"
             x:Class="MineSweeper.MainPage"
             x:DataType="viewmodels:GameViewModel">
    
    <ContentPage.Resources>
        <ResourceDictionary>
            <Style TargetType="Button">
                <Setter Property="FontSize" Value="Small" />
                <Setter Property="Margin" Value="5" />
                <Setter Property="Padding" Value="10,5" />
            </Style>
            
            <Style TargetType="Label">
                <Setter Property="VerticalOptions" Value="Center" />
                <Setter Property="HorizontalOptions" Value="Center" />
                <Setter Property="FontSize" Value="16" />
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid BackgroundColor="LightGray" Padding="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        
        <!-- Game Info Panel -->
        <Grid Grid.Row="0" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            
            <!-- Mines Counter -->
            <Border Grid.Column="0" Stroke="DarkGray" StrokeThickness="1" BackgroundColor="White" Padding="10,5">
                <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
                    <Label Text="💣" FontSize="18" VerticalOptions="Center" />
                    <Label Text="{Binding RemainingMines}" FontSize="18" FontAttributes="Bold" VerticalOptions="Center" />
                </StackLayout>
            </Border>
            
            <!-- Game Status -->
            <Border Grid.Column="1" Stroke="DarkGray" StrokeThickness="1" BackgroundColor="White" Padding="10,5">
                <Label Text="{Binding GameStatus}" FontSize="16" HorizontalOptions="Center" />
            </Border>
            
            <!-- Timer -->
            <Border Grid.Column="2" Stroke="DarkGray" StrokeThickness="1" BackgroundColor="White" Padding="10,5">
                <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
                    <Label Text="⏱️" FontSize="18" VerticalOptions="Center" />
                    <Label Text="{Binding GameTime}" FontSize="18" FontAttributes="Bold" VerticalOptions="Center" />
                </StackLayout>
            </Border>
        </Grid>
        
        <!-- Difficulty Selection -->
        <Grid Grid.Row="1" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            
            <Button Grid.Column="0" Text="Easy" 
                    Command="{Binding NewGameCommand}" 
                    CommandParameter="0" />
            
            <Button Grid.Column="1" Text="Medium" 
                    Command="{Binding NewGameCommand}" 
                    CommandParameter="1" />
            
            <Button Grid.Column="2" Text="Hard" 
                    Command="{Binding NewGameCommand}" 
                    CommandParameter="2" />
        </Grid>
        
        <!-- Game Grid -->
        <controls:GameGrid Grid.Row="2" 
                          PlayCommand="{Binding PlayCommand}" 
                          FlagCommand="{Binding FlagCommand}"
                          BindingContext="{Binding .}" />
        
        <!-- Instructions -->
        <StackLayout Grid.Row="3" Margin="0,10,0,0">
            <Label Text="Tap to reveal a cell" HorizontalOptions="Center" />
            <Label Text="Double-tap to flag a mine" HorizontalOptions="Center" />
        </StackLayout>
    </Grid>
</ContentPage>
