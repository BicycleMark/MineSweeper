<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:MineSweeper.Views.Controls"
             xmlns:viewmodels="clr-namespace:MineSweeper.ViewModels"
             xmlns:models="clr-namespace:MineSweeper.Models"
             xmlns:converters="clr-namespace:MineSweeper.Views.Converters"
             xmlns:local="clr-namespace:MineSweeper.Views.Controls"
             x:Class="MineSweeper.MainPage"
             x:DataType="viewmodels:GameViewModel">

    <ContentPage.Resources>
        <ResourceDictionary>
            <!-- Converters -->
            <converters:SimpleRevealedConverter x:Key="SimpleRevealedConverter" />
            <converters:BoolToOpacityConverter x:Key="BoolToOpacityConverter" />
            <converters:InverseBoolToOpacityConverter x:Key="InverseBoolToOpacityConverter" />
            <converters:MineCountToColorConverter x:Key="MineCountToColorConverter" />
            <converters:NonZeroConverter x:Key="NonZeroConverter" />
            <converters:BoolConverter x:Key="BoolConverter" />
            <converters:InverseBoolConverter x:Key="InverseBoolConverter" />
            <converters:ProgressConverter x:Key="ProgressConverter" />

            <!-- Game Button Style -->
            <Style x:Key="GameButtonStyle" TargetType="Button">
                <Setter Property="FontSize" Value="14" />
                <Setter Property="FontAttributes" Value="Bold" />
                <Setter Property="Margin" Value="5" />
                <Setter Property="Padding" Value="10,8" />
                <Setter Property="CornerRadius" Value="8" />
                <Setter Property="BackgroundColor"
                        Value="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryDark}}" />
                <Setter Property="TextColor" Value="{AppThemeBinding Light=White, Dark=White}" />
                <Setter Property="Shadow">
                    <Shadow Brush="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource Black}}"
                            Offset="0,2"
                            Radius="4"
                            Opacity="0.2" />
                </Setter>
            </Style>

            <!-- Game Label Style -->
            <Style x:Key="GameLabelStyle" TargetType="Label">
                <Setter Property="VerticalOptions" Value="Center" />
                <Setter Property="HorizontalOptions" Value="Center" />
                <Setter Property="FontSize" Value="16" />
                <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource MidnightBlue}, Dark=White}" />
            </Style>

            <!-- Game Info Panel Style -->
            <Style x:Key="GameInfoPanelStyle" TargetType="Border">
                <Setter Property="Stroke"
                        Value="{AppThemeBinding Light={StaticResource CellBorder}, Dark={StaticResource CellBorderDark}}" />
                <Setter Property="StrokeThickness" Value="1" />
                <Setter Property="StrokeShape" Value="RoundRectangle 8" />
                <Setter Property="BackgroundColor"
                        Value="{AppThemeBinding Light=White, Dark={StaticResource MidnightBlue}}" />
                <Setter Property="Padding" Value="10,8" />
                <Setter Property="Shadow">
                    <Shadow Brush="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource Black}}"
                            Offset="0,2"
                            Radius="4"
                            Opacity="0.2" />
                </Setter>
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid
        BackgroundColor="{AppThemeBinding Light={StaticResource GameBackground}, Dark={StaticResource GameBackgroundDark}}"
        Padding="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Loading Overlay - Semi-transparent to allow interaction during progressive loading -->
        <Grid IsVisible="{Binding IsLoading, Converter={StaticResource BoolConverter}}"
              BackgroundColor="{AppThemeBinding Light=#80FFFFFF, Dark=#80000000}"
              ZIndex="999"
              Grid.RowSpan="4">
            <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center" Spacing="16">
                <ActivityIndicator IsRunning="{Binding IsLoading}"
                                   Color="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource Primary}}"
                                   HeightRequest="50"
                                   WidthRequest="50" />
                <Label Text="Loading game..."
                       FontSize="18"
                       TextColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource Primary}}"
                       HorizontalOptions="Center" />
            </VerticalStackLayout>
        </Grid>

        <!-- Progressive Loading Indicator -->
        <Grid IsVisible="{Binding IsGridFullyLoaded, Converter={StaticResource InverseBoolConverter}}"
              BackgroundColor="Transparent"
              ZIndex="998"
              IsEnabled="False"
              InputTransparent="True"
              Grid.RowSpan="4">
            <VerticalStackLayout HorizontalOptions="Center"
                                 VerticalOptions="End"
                                 Spacing="8"
                                 Margin="0,0,0,20">
                <ProgressBar Progress="{Binding LoadingProgress, Converter={StaticResource ProgressConverter}}"
                             ProgressColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource Primary}}"
                             HeightRequest="10"
                             WidthRequest="200" />
                <Label Text="{Binding LoadingProgress, StringFormat='{0}% Complete'}"
                       FontSize="14"
                       TextColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource Primary}}"
                       HorizontalOptions="Center" />
            </VerticalStackLayout>
        </Grid>

        <!-- Game Title and Button Row -->
        <HorizontalStackLayout Grid.Row="0" 
                               HorizontalOptions="Center"
                               VerticalOptions="Center"
                               Spacing="10"
                               Margin="0,0,0,16">
            <Label Text="MineSweeper"
                   FontSize="28" 
                   FontAttributes="Bold"
                   VerticalOptions="Center"
                   TextColor="{AppThemeBinding Light={StaticResource MidnightBlue}, Dark=White}" />
           <!--
            <Button WidthRequest="40" 
                    HeightRequest="40"
                    Padding="0"
                    VerticalOptions="Center"
                    Text ="H">
               
            </Button>
            -->
            <Button x:Name="HelpButton"
                    WidthRequest="40" 
                    HeightRequest="40"
                    Padding="0"
                    VerticalOptions="Center"
                    BackgroundColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryDark}}"
                    BorderColor="{AppThemeBinding Light={StaticResource CellBorder}, Dark={StaticResource CellBorderDark}}"
                    BorderWidth="1"
                    TextColor="White"
                    ImageSource="unplayed.png"
                    Clicked="OnHelpButtonClicked">
            </Button>
        </HorizontalStackLayout>

        <!-- Game Info Panel -->
        <Grid Grid.Row="1" Margin="0,0,0,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Mines Counter -->
            <Border Grid.Column="0" Style="{StaticResource GameInfoPanelStyle}" Margin="0,0,8,0">
                <HorizontalStackLayout HorizontalOptions="Center" Spacing="8">
                    <Label Text="ðŸ’£" FontSize="20" VerticalOptions="Center" />
                    <Label Text="{Binding RemainingMines}"
                           FontSize="20"
                           FontAttributes="Bold"
                           VerticalOptions="Center"
                           TextColor="{AppThemeBinding Light={StaticResource Secondary}, Dark={StaticResource Secondary}}" />
                </HorizontalStackLayout>
            </Border>

            <!-- Game Status -->
            <Border Grid.Column="1" Style="{StaticResource GameInfoPanelStyle}" Margin="4,0,4,0">
                <Label Text="{Binding GameStatus}"
                       FontSize="16"
                       FontAttributes="Bold"
                       HorizontalOptions="Center"
                       Style="{StaticResource GameLabelStyle}" />
            </Border>

            <!-- Timer -->
            <Border Grid.Column="2" Style="{StaticResource GameInfoPanelStyle}" Margin="8,0,0,0">
                <HorizontalStackLayout HorizontalOptions="Center" Spacing="8">
                    <Label Text="â±ï¸" FontSize="20" VerticalOptions="Center" />
                    <Label Text="{Binding GameTime}"
                           FontSize="20"
                           FontAttributes="Bold"
                           VerticalOptions="Center"
                           TextColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource Primary}}" />
                </HorizontalStackLayout>
            </Border>
        </Grid>

        <!-- 
        <Grid Grid.Row="2" HorizontalOptions="Center" VerticalOptions="Center">
            <Border Stroke="{AppThemeBinding Light={StaticResource CellBorder}, Dark={StaticResource CellBorderDark}}"
                    StrokeThickness="2"
                    BackgroundColor="{AppThemeBinding Light={StaticResource CellBorder}, Dark={StaticResource MidnightBlue}}"
                    Padding="4"
                    WidthRequest="400"
                    HeightRequest="400"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"
                    Margin="0,0,0,16"
                    Shadow="{Shadow Brush={AppThemeBinding Light={StaticResource Black}, Dark={StaticResource Black}}, Offset='0,4', Radius='8', Opacity='0.2'}">
            
                <controls:BasicImageGrid x:Name="GameGrid" 
                                        HorizontalOptions="Fill" 
                                        VerticalOptions="Fill" />
            </Border>
        </Grid>
        -->
        
        <!-- Game Grid -->
        <Grid Grid.Row="2">
            <Border Stroke="{AppThemeBinding Light={StaticResource CellBorder}, Dark={StaticResource CellBorderDark}}"
                    StrokeThickness="2"
                    BackgroundColor="{AppThemeBinding Light={StaticResource CellBorder}, Dark={StaticResource MidnightBlue}}"
                    Padding="4"
                    HorizontalOptions="Fill"
                    VerticalOptions="Fill">
                <controls:SquareImageGrid x:Name="GameGrid"
                                         HorizontalOptions="Fill"
                                         VerticalOptions="Fill"
                                         GridSize="{Binding Rows}" />
            </Border>
        </Grid>

        <!-- Instructions and Controls -->
        <Grid Grid.Row="3" Margin="0,16,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            
            <!-- Instructions -->
            <VerticalStackLayout Grid.Row="0" Spacing="4" Margin="0,0,0,16"
                                 IsVisible="{Binding IsGridFullyLoaded, Converter={StaticResource BoolConverter}}">
                <Label Text="Tap to reveal a cell"
                       HorizontalOptions="Center"
                       Style="{StaticResource GameLabelStyle}" />
                <Label Text="Double-tap to flag a mine"
                       HorizontalOptions="Center"
                       Style="{StaticResource GameLabelStyle}" />
            </VerticalStackLayout>
            
            <!-- Controls -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                
                <Button Grid.Column="0"
                        Text="Square Image Grid Example"
                        Clicked="OnSquareImageGridExampleClicked"
                        Style="{StaticResource GameButtonStyle}"
                        HorizontalOptions="Center" />
                        
                <Button Grid.Column="1"
                        Text="LED Control Example"
                        Clicked="OnLedControlExampleClicked"
                        Style="{StaticResource GameButtonStyle}"
                        HorizontalOptions="Center" />
            </Grid>
        </Grid>
    </Grid>
</ContentPage>
