<?xml version="1.0" encoding="utf-8"?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:MineSweeper.Views.Controls"
             xmlns:models="clr-namespace:MineSweeper.Models"
             x:Class="MineSweeper.Views.Controls.DirectUniformGameGrid">
    
    <Border x:Name="mainBorder" 
            StrokeThickness="0" 
            
            Padding="4"
            BackgroundColor="Transparent"
            HorizontalOptions="Fill"
            VerticalOptions="Fill">
        <!-- Use UniformGrid directly for better performance -->
        <controls:UniformGrid x:Name="board"
                             HorizontalOptions="Center"
                             VerticalOptions="Center"
                             BackgroundColor="Transparent" />
    </Border>
</ContentView>
